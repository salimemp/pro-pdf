
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/pro_pdf/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  ipAddress    String?
  userAgent    String?
  deviceType   String?  // web, mobile, tablet
  lastActivity DateTime @default(now())
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([lastActivity])
}

model User {
  id               String    @id @default(cuid())
  name             String?
  firstName        String?
  lastName         String?
  email            String    @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  isPremium        Boolean   @default(false)
  stripeCustomerId String?   @unique
  subscriptionId   String?   @unique
  subscriptionType String?   @default("free") // free, pro, enterprise
  subscriptionStatus String? // active, inactive, canceled, past_due
  subscriptionEndDate DateTime?
  
  // 2FA Fields
  twoFactorEnabled Boolean   @default(false)
  twoFactorSecret  String?   // Encrypted TOTP secret
  backupCodes      Json?     // Array of encrypted backup codes
  
  // Email Verification
  verificationToken String?  @unique
  verificationTokenExpiry DateTime?
  
  // Password Reset
  resetToken       String?   @unique
  resetTokenExpiry DateTime?
  
  // Compliance Fields (GDPR, CCPA, PIPEDA, HIPAA)
  acceptedTermsAt         DateTime? // When user accepted Terms of Service
  acceptedPrivacyAt       DateTime? // When user accepted Privacy Policy
  acceptedMarketingAt     DateTime? // When user consented to marketing communications
  gdprConsent             Boolean   @default(false) // General GDPR consent
  ccpaOptOut              Boolean   @default(false) // CCPA "Do Not Sell" opt-out
  dataRetentionConsent    Boolean   @default(true)  // Consent to data retention
  
  // Data Subject Rights Tracking
  dataExportRequestedAt   DateTime? // Last data export request
  dataDeletionRequestedAt DateTime? // Data deletion request
  dataDeletionScheduledAt DateTime? // Scheduled deletion date (30-day grace period)
  
  // Privacy Settings
  cookieConsent           Json?     // Cookie preferences {analytics, marketing, functional}
  privacySettings         Json?     // Additional privacy preferences
  
  // Geographic Compliance
  country                 String?   // User's country for compliance requirements
  gdprRegion              Boolean   @default(false) // Is user in GDPR region
  ccpaRegion              Boolean   @default(false) // Is user in CCPA region
  
  // Push Notifications (PWA)
  pushSubscription        String?   @db.Text // JSON-encoded push subscription object
  notificationsEnabled    Boolean   @default(false) // User has enabled push notifications
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  files            File[]
  conversionHistory ConversionHistory[]
  subscriptions    Subscription[]
  jobs             Job[]
  securityLogs     SecurityLog[]
  auditLogs        AuditLog[]
  dataAccessLogs   DataAccessLog[]
  
  @@index([email])
  @@index([verificationToken])
  @@index([resetToken])
  @@index([dataDeletionScheduledAt])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model File {
  id            String   @id @default(cuid())
  userId        String?  // null for guest users
  fileName      String
  originalName  String
  fileSize      Int
  mimeType      String
  cloudStoragePath String
  isTemporary   Boolean  @default(false) // true for guest files
  isEncrypted   Boolean  @default(false) // HIPAA/PHI data encryption
  encryptionKey String?  // Reference to encryption key (not the actual key)
  uploadedAt    DateTime @default(now())
  expiresAt     DateTime? // for guest files
  lastAccessedAt DateTime? // HIPAA access tracking
  
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversionHistory ConversionHistory[]
  
  @@index([userId])
  @@index([expiresAt])
}

model ConversionHistory {
  id            String   @id @default(cuid())
  userId        String?  // null for guest users
  fileId        String?  // null if file was deleted
  operation     String   // merge, split, compress, pdf_to_text, etc.
  inputFormat   String
  outputFormat  String?
  fileSize      Int
  outputFileSize Int?
  status        String   // processing, completed, failed
  errorMessage  String?
  processingTime Int?   // in milliseconds
  createdAt     DateTime @default(now())
  
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  file          File?    @relation(fields: [fileId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([createdAt])
}

model Subscription {
  id                String   @id @default(cuid())
  userId            String
  stripeSubscriptionId String @unique
  stripeCustomerId  String
  stripePriceId     String
  status            String   // active, inactive, canceled, past_due
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  canceledAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Job {
  id            String   @id @default(cuid())
  userId        String
  name          String   // User-friendly job name
  type          String   // merge, split, compress, convert, sign, encrypt
  status        String   @default("pending") // pending, processing, completed, failed, scheduled
  priority      String   @default("medium") // low, medium, high, urgent
  progress      Int      @default(0) // 0-100
  
  // Recurrence Settings
  isRecurring   Boolean  @default(false)
  recurrence    String?  // daily, weekly, monthly, custom
  nextRunAt     DateTime?
  lastRunAt     DateTime?
  
  // Job Configuration
  inputFiles    Json     // Array of file IDs or paths
  outputFiles   Json?    // Array of result file paths
  settings      Json     // Tool-specific settings (compression level, split ranges, etc.)
  
  // Metadata
  errorMessage  String?
  startedAt     DateTime?
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([nextRunAt])
}

model SecurityLog {
  id            String   @id @default(cuid())
  userId        String
  eventType     String   // login, password_change, 2fa_enabled, 2fa_disabled, suspicious_login, session_revoked
  description   String
  ipAddress     String?
  userAgent     String?
  location      String?  // Country/City from IP geolocation
  deviceType    String?  // web, mobile, tablet
  success       Boolean  @default(true)
  metadata      Json?    // Additional context (e.g., failed login reason, changed settings)
  createdAt     DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([userId, eventType])
  @@index([createdAt])
}

// Compliance: Audit Log for HIPAA, GDPR, PIPEDA tracking
model AuditLog {
  id            String   @id @default(cuid())
  userId        String?  // null for system events
  eventType     String   // data_access, data_export, data_deletion, consent_change, privacy_settings_change
  resourceType  String   // user, file, conversion, subscription
  resourceId    String?  // ID of affected resource
  action        String   // create, read, update, delete, export
  description   String
  ipAddress     String?
  userAgent     String?
  metadata      Json?    // Additional context
  createdAt     DateTime @default(now())
  
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([userId, createdAt])
  @@index([eventType])
  @@index([resourceType, resourceId])
  @@index([createdAt])
}

// HIPAA Compliance: Data Access Log
model DataAccessLog {
  id            String   @id @default(cuid())
  userId        String
  accessedBy    String   // User ID who accessed the data
  resourceType  String   // file, conversion, user_profile
  resourceId    String
  accessType    String   // view, download, edit, delete
  ipAddress     String?
  userAgent     String?
  purpose       String?  // Business purpose of access (HIPAA requirement)
  createdAt     DateTime @default(now())
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([accessedBy, createdAt])
  @@index([resourceType, resourceId])
}
